@model IEnumerable<Student_Management.Models.CourseModel>
@{
    ViewBag.Title = "AllCourses";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>All Offered Courses</h2><br />
<table class="table table-hover table-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Course Code
            </th>
            <th>
                Course Name
            </th>
            <th>
                Course Credit
            </th>
            <th>
                Course Dept
            </th>
            <th>
                Availability
            </th>
            <th>
                Enrollment
            </th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @item.courseCode
                </td>
                <td>
                    @item.courseName
                </td>
                <td>
                    @item.courseCredit
                </td>
                <td>
                    @item.courseDept
                </td>
                <td>
                    @item.courseStatus
                </td>
                <td>
                    <a href="@Url.Action("Enroll","Course",new {code=item.courseCode})" class="btn btn-outline-success">Enroll</a>
</td>
            </tr>
        </tbody>

    }

</table>

