@model Student_Management.Models.StudentModel
@{
    ViewBag.Title = "StudentProfile";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Student Profile</h2>
<br />
<form action="@Url.Action("editProfile","Student")" method="post" class="row g-3">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-12">
        <label class="form-label">Name</label>
        <input type="text" value="@Model.studentName" id="" name="name" class="form-control" />
        @Html.ValidationMessageFor(model => model.studentName, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-12">
        <label class="form-label">Email</label>
        <input type="text" value="@Model.studentEmail" id="" name="mail" class="form-control" />
        @Html.ValidationMessageFor(model => model.studentEmail, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-12">
        <label class="form-label">Password</label>
        <input type="password" value="@Model.studentPass" id="pass" name="pass" class="form-control" />
        @Html.ValidationMessageFor(model => model.studentPass, "", new { @class = "text-danger" })
        <div class="form-check">
            <input type="checkbox" value="" id="showPass" name="showPass" class="form-check-input" onclick="showPassword()" />
            <label for="showPass" class="form-check-label">Show Password</label>
        </div>
    </div>
    <div class="col-md-12">
        <input type="submit" value="Save Changes" class="btn btn-outline-warning" />
    </div>
</form>
<script>
    function showPassword() {
        var x = document.getElementById("pass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>


